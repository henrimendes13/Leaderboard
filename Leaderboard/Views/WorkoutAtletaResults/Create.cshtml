@model Leaderboard.Models.WorkoutAtletaResult

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>WorkoutAtletaResult</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AtletaId" class="control-label"></label>
                @Html.DropDownListFor(model => model.AtletaId, ViewBag.Atletas as SelectList, "Selecione o Atleta", new { @class = "form-control" })
                <span asp-validation-for="AtletaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkoutId" class="control-label"></label>
                @Html.DropDownListFor(model => model.WorkoutId, ViewBag.Workouts as SelectList, "Selecione o Workout", new { @class = "form-control" })
                <span asp-validation-for="WorkoutId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resultado" class="control-label"></label>
                <input asp-for="Resultado" class="form-control" />
                <span asp-validation-for="Resultado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
